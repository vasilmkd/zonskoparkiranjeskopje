<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/intro_image_view_dimen"
        android:layout_height="@dimen/intro_image_view_dimen"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/intro_text_view_margin_start"
        android:layout_marginStart="@dimen/intro_text_view_margin_start"
        android:layout_marginRight="@dimen/intro_text_view_margin_start"
        android:layout_marginEnd="@dimen/intro_text_view_margin_start"
        android:layout_marginTop="?attr/actionBarSize"
        android:gravity="center"
        android:text="@string/pay_parking"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"/>

</LinearLayout>